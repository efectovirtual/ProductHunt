


<div class="container">
  <div class="row">
  <div class="col-md-12 text-center">
    <h1>Productos</h1>

  <% if signed_in? %>
      <div class="text-right"> 
        <%= link_to "publicar producto", new_product_path, class: "btn btn-primary" %>
      </div>
  <% end %>

  </div>
    <div class="col-md-12">

      <table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Url</th>
            <th>Descripci√≥n</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>

        <% @products.each do |p| %>
          <tr>
            <td><%= p.id %></td>
            <td><%= link_to p.name, p %></td>
            <td><%= p.url %></td>
            <td><%= p.description %></td>
            <% if signed_in? %>
              <td><%= link_to "Editar", edit_product_path(p) %></td>
              <td><%= link_to "Eliminar", p, method: :delete, data: {confirm: "Estas seguro de eliminar este producto?"} %></td>
            <% end %>
          </tr>
        <% end %>
          
        </tbody>
      </table>

    </div>
  </div>
</div>
