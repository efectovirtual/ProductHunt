<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 text-center">
      <h1><%= form_title %></h1>

      <% if @product.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <%= form_for @product do|f| %>
        
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        
        <div class="form-group">
          <%= f.text_field :url, class: "form-control input-lg", placeholder: "Ingresa la URL del producto" %>
        </div>

        <div class="form-group">
          <%= f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa la descripciÃ³n" %>
        </div>

        <div>
          <%= f.submit form_title, class: "btn, btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div> s